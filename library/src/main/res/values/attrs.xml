<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="eventIndicatorStyle" format="enum">
        <enum name="fill_large_indicator" value="1" />
        <enum name="no_fill_large_indicator" value="2" />
        <enum name="small_indicator" value="3" />
    </attr>

    <attr name="currentDayIndicatorStyle" format="enum">
        <enum name="fill_large_indicator" value="1" />
        <enum name="no_fill_large_indicator" value="2" />
    </attr>

    <attr name="selectedDayIndicatorStyle" format="enum">
        <enum name="fill_large_indicator" value="1" />
        <enum name="no_fill_large_indicator" value="2" />
    </attr>

    <declare-styleable name="CompactCalendarView">
        <attr name="textSize" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="currentDayBackgroundColor" format="color"/>
        <attr name="currentDayTextColor" format="color"/>
        <attr name="selectedDayBackgroundColor" format="color"/>
        <attr name="selectedDayTextColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="multiEventIndicatorColor" format="color"/>
        <attr name="targetHeight" format="dimension"/>
        <attr name="eventIndicatorStyle"/>
        <attr name="currentDayIndicatorStyle"/>
        <attr name="selectedDayIndicatorStyle"/>
        <attr name="displayOtherMonthDays" format="boolean"/>
        <attr name="shouldSelectFirstDayOfMonthOnScroll" format="boolean"/>
        <attr name="otherMonthDaysTextColor" format="color"/>
    </declare-styleable>
</resources>
